<% provide :title, @page.title.titlecase %>
<div class="row">
	<div class="span8">
		<%= simple_form_for [refinery, :inquiries, @inquiry], defaults: { input_html: { class: "span5" } }, html: { class: "form-horizontal" } do |f| %>
			<%= f.input :name %>
			<%= f.input :email, label: "* Email" %>
			<%= f.input :phone %>
			<%= f.input :message, input_html: { rows: 4 } %>
			<%= f.submit t('.send'), class: "btn btn-primary btn-large" %>
			<%= link_to t('.privacy_policy'), "/pages/privacy-policy", class: "btn", :id => "privacy_link" if Refinery::Inquiries.show_contact_privacy_link %>
		<% end %>
	</div>

	<div class="span4">
		<%= render 'shared/contact' %>
	</div>
</div>

