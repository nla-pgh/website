<li class="span7">
	<div class="thumbnail">
		<%= link_to item.image.url do %>
			<%= image_tag(item.image.url, {:id => dom_id(item), :title => item.title}) %>
			<% if ::Refinery::Portfolio.display_item_text and not item.title.blank? and not item.caption.blank?%>
				<div class="caption">
					<div class="well">
						<h5><%= item.title %></h5>
						<%=raw item.caption %>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</li>
