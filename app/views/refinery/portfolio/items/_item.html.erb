<li class="span8">
	<div class="thumbnail">
		<%= link_to item.image.url do %>
			<%= image_tag(item.image.url, {:id => dom_id(item), :title => item.title}) %>
		<% end %>
		<% if ::Refinery::Portfolio.display_item_text %>
			<div class="caption">
				<div class="well">
					<h5><%= item.title %></h5>
					<%=raw item.caption %>
				</div>
			</div>
		<% end %>
</li>
